<p id="notice">
  <%= notice %>
</p>

<h1>Books</h1>
<% @books.each do |book| %>
  <th>Title</th>
  <span><%= book.title %></span>
  <th>Body</th>
  <span><%= book.body %></span>
  <%= link_to "Show", "/books/#{book.id}" %>
  <%= link_to "edit", "/books/#{book.id}/edit" %>
  <%= link_to "destroy", "/books/#{book.id}", method: :delete, "date-confirm" => "Are you sure?" %>
<% end %>

<h3>New book</h3>
<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
