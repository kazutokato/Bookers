<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <lavel>Body</lavel>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to 'Show', book_path(@book.id) %>
  <%= link_to 'back', index_book_path(@book.id) %>
<% end %>